 */
function handleThemeButtonHover() {
    if (!this.classList.contains('selected')) {
        this.style.transform = 'scale(1.05)';
    }
}

/**
 * Function: handleThemeButtonLeave
 * Description: Handle theme button mouse leave
 */
function handleThemeButtonLeave() {
    if (!this.classList.contains('selected')) {
        this.style.transform = 'scale(1)';
    }
}

