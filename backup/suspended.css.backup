:root {
  /* Dynamic theme variables - will be updated by JavaScript */
  --current-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --glass-gradient-from: rgba(102, 126, 234, 0.2);
  --glass-gradient-to: rgba(118, 75, 162, 0.2);
  
  /* Light theme colors (default beautiful purple) */
  --light-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  --light-container: rgba(255, 255, 255, 0.15);
  --light-url-bg: rgba(255, 255, 255, 0.25);
  --light-button-bg: rgba(255, 255, 255, 0.25);
  --light-button-hover: white;
  --light-button-hover-text: #667eea;
  
  /* Dark theme colors */
  --dark-gradient: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  --dark-container: rgba(255, 255, 255, 0.08);
  --dark-url-bg: rgba(255, 255, 255, 0.12);
  --dark-button-bg: rgba(255, 255, 255, 0.15);
  --dark-button-hover: rgba(255, 255, 255, 0.25);
  --dark-button-hover-text: #e0e0e0;
  
  /* Fallback theme (when extension unavailable) */
  --fallback-gradient: linear-gradient(135deg, #121212 0%, #2d2d2d 100%);
  --fallback-container: rgba(255, 255, 255, 0.03);
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  margin: 0;
  padding: 40px;
  /* Use dynamic theme gradient */
  background: var(--current-gradient) !important;
  background-attachment: fixed;
  color: white;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: background 0.5s ease;
}

/* GRADIENT GLASS CONTAINER - uses theme colors */
.container {
  max-width: 600px;
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%, 
      var(--glass-gradient-to) 100%);
  padding: 40px;
  border-radius: 15px;
  backdrop-filter: blur(25px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
  transition: all 0.5s ease;
}

h1 {
  font-size: 2.5em;
  margin-bottom: 20px;
  font-weight: 300;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

/* GRADIENT GLASS URL BOX */
.url {
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%, 
      rgba(255, 255, 255, 0.2) 100%);
  padding: 15px 20px;
  border-radius: 10px;
  margin: 20px 0;
  word-break: break-all;
  font-family: 'SF Mono', Monaco, Consolas, monospace;
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.15);
  transition: all 0.5s ease;
}

.suspension-id {
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%, 
      rgba(255, 255, 255, 0.1) 100%);
  padding: 10px 15px;
  border-radius: 8px;
  margin: 15px 0;
  font-size: 12px;
  font-family: 'SF Mono', Monaco, Consolas, monospace;
  backdrop-filter: blur(10px);
  opacity: 0.8;
}

.actions {
  margin-top: 30px;
}

/* GRADIENT GLASS BUTTONS */
.action-btn {
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%, 
      var(--glass-gradient-to) 100%);
  border: 2px solid rgba(255, 255, 255, 0.4);
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  cursor: pointer;
  font-size: 16px;
  margin: 0 10px 10px 10px;
  transition: all 0.3s ease;
  display: inline-block;
  text-decoration: none;
  backdrop-filter: blur(15px);
}

.action-btn:hover {
  background: linear-gradient(135deg, 
      var(--glass-gradient-to) 0%, 
      rgba(255, 255, 255, 0.3) 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.info {
  margin-top: 20px;
  opacity: 0.8;
  font-size: 14px;
}

.extension-status {
  margin-top: 15px;
  padding: 10px;
  border-radius: 6px;
  font-size: 13px;
}

.status-warning {
  background: rgba(255, 193, 7, 0.2);
  border: 1px solid rgba(255, 193, 7, 0.4);
}

.status-error {
  background: rgba(220, 53, 69, 0.2);
  border: 1px solid rgba(220, 53, 69, 0.4);
}

.status-success {
  background: rgba(40, 167, 69, 0.2);
  border: 1px solid rgba(40, 167, 69, 0.4);
}

/* RECOVERY MESSAGE STYLING */
.recovery-message {
  background: rgba(52, 152, 219, 0.2);
  border: 1px solid rgba(52, 152, 219, 0.4);
  padding: 15px;
  border-radius: 8px;
  margin: 20px 0;
  text-align: center;
}

.recovery-message.success {
  background: rgba(40, 167, 69, 0.2);
  border: 1px solid rgba(40, 167, 69, 0.4);
}

/* LIGHT THEME GRADIENT GLASS with DARK TEXT */
body.light-theme {
  color: #1a1a1a !important;
}

body.light-theme h1,
body.light-theme .info {
  color: #1a1a1a !important;
  text-shadow: 0 1px 3px rgba(255,255,255,0.8) !important;
}

body.light-theme .container {
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0.7) 100%) !important;
  backdrop-filter: blur(30px) !important;
  border: 1px solid rgba(255, 255, 255, 0.4) !important;
  box-shadow: 0 10px 40px rgba(31, 38, 135, 0.15) !important;
}

body.light-theme .url {
  background: linear-gradient(135deg, 
      var(--glass-gradient-to) 0%,
      rgba(255, 255, 255, 0.6) 100%) !important;
  backdrop-filter: blur(20px) !important;
  border: 1px solid rgba(255, 255, 255, 0.5) !important;
  color: #1a1a1a !important;
}

body.light-theme .action-btn {
  background: linear-gradient(135deg, 
      var(--glass-gradient-from) 0%,
      rgba(255, 255, 255, 0.5) 100%) !important;
  border: 2px solid rgba(0, 0, 0, 0.1) !important;
  color: #1a1a1a !important;
}

body.light-theme .action-btn:hover {
  background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.8) 0%,
      var(--glass-gradient-to) 100%) !important;
  color: #1a1a1a !important;
  border-color: rgba(0, 0, 0, 0.2) !important;
}

/* Theme-specific glass gradient colors for suspended tabs */
body.theme-purple { --glass-gradient-from: rgba(102, 126, 234, 0.2); --glass-gradient-to: rgba(118, 75, 162, 0.2); }
body.theme-ocean { --glass-gradient-from: rgba(102, 125, 182, 0.2); --glass-gradient-to: rgba(0, 130, 200, 0.2); }
body.theme-sunset { --glass-gradient-from: rgba(255, 154, 158, 0.2); --glass-gradient-to: rgba(254, 207, 239, 0.2); }
body.theme-forest { --glass-gradient-from: rgba(19, 78, 94, 0.2); --glass-gradient-to: rgba(113, 178, 128, 0.2); }
body.theme-fire { --glass-gradient-from: rgba(255, 65, 108, 0.2); --glass-gradient-to: rgba(255, 75, 43, 0.2); }
body.theme-lavender { --glass-gradient-from: rgba(168, 237, 234, 0.2); --glass-gradient-to: rgba(254, 214, 227, 0.2); }
body.theme-cosmic { --glass-gradient-from: rgba(102, 126, 234, 0.2); --glass-gradient-to: rgba(118, 75, 162, 0.2); }
body.theme-emerald { --glass-gradient-from: rgba(17, 153, 142, 0.2); --glass-gradient-to: rgba(56, 239, 125, 0.2); }
body.theme-rose { --glass-gradient-from: rgba(240, 147, 251, 0.2); --glass-gradient-to: rgba(245, 87, 108, 0.2); }
body.theme-sky { --glass-gradient-from: rgba(116, 185, 255, 0.2); --glass-gradient-to: rgba(0, 132, 227, 0.2); }
body.theme-peach { --glass-gradient-from: rgba(255, 236, 210, 0.2); --glass-gradient-to: rgba(252, 182, 159, 0.2); }
body.theme-mint { --glass-gradient-from: rgba(168, 230, 207, 0.2); --glass-gradient-to: rgba(127, 205, 205, 0.2); }
body.theme-golden { --glass-gradient-from: rgba(255, 216, 155, 0.2); --glass-gradient-to: rgba(25, 84, 123, 0.2); }
body.theme-berry { --glass-gradient-from: rgba(131, 96, 195, 0.2); --glass-gradient-to: rgba(46, 191, 145, 0.2); }
body.theme-coral { --glass-gradient-from: rgba(255, 149, 86, 0.2); --glass-gradient-to: rgba(255, 107, 149, 0.2); }
body.theme-aurora { --glass-gradient-from: rgba(0, 198, 255, 0.2); --glass-gradient-to: rgba(0, 114, 255, 0.2); }
body.theme-dark { --glass-gradient-from: rgba(26, 26, 46, 0.2); --glass-gradient-to: rgba(22, 33, 62, 0.2); }
body.theme-midnight { --glass-gradient-from: rgba(15, 15, 35, 0.2); --glass-gradient-to: rgba(45, 27, 105, 0.2); }

/* Extension theme classes */
body.extension-light-theme {
  background: var(--light-gradient) !important;
}

body.extension-dark-theme {
  background: var(--dark-gradient) !important;
}

body.extension-unavailable {
  background: var(--fallback-gradient) !important;
}

/* System dark mode support */
@media (prefers-color-scheme: dark) {
  body:not(.extension-light-theme):not(.extension-dark-theme):not(.extension-unavailable) {
    background: var(--dark-gradient);
  }
}

/* Responsive design */
@media (max-width: 768px) {
  body {
    padding: 20px;
  }
  
  .container {
    padding: 30px 20px;
  }
  
  h1 {
    font-size: 2em;
  }
  
  .action-btn {
    margin: 5px;
    padding: 10px 20px;
    font-size: 14px;
  }
}

