{
  "type": "object",
  "properties": {
    "suspendAfter": {
      "type": "integer",
      "minimum": 1,
      "maximum": 7200,
      "default": 60
    },
    "noSuspendPinned": {
      "type": "boolean",
      "default": true
    },
    "noSuspendAudio": {
      "type": "boolean", 
      "default": true
    },
    "enableTabProtection": {
      "type": "boolean",
      "default": true
    },
    "selectedTheme": {
      "type": "string",
      "default": "purple"
    },
    "systemThemeBehavior": {
      "type": "string",
      "enum": ["manual", "follow-system", "always-light", "always-dark"],
      "default": "manual"
    }
  }
}
